<div id="admin-login" class="container d-flex align-items-center justify-content-center">
  <form class="w-50">
    <label for="inputUsername" class="sr-only">Username</label>
    <input type="email" id="inputUsername" class="form-control mb-3" placeholder="Username" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control mb-3" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>
</div>
